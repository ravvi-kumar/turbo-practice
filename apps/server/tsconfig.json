{
  "compilerOptions": {
    "removeComments": true,
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@lib/*": [
        "./src/lib/"
      ],
      "@services/*": [
        "./src/services/"
      ],
      "@middlewares/*": [
        "./src/middlewares/"
      ],
      "@loaders/*": [
        "./src/loaders/"
      ],
      "@models/*": [
        "./src/models/"
      ]
    }
  },
  "include": [
    "src/index.ts",
    "src/**/*"
  ]
}